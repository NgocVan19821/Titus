<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/invisibleColor"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/receiveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:background="@color/receiveBackground"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"/>



    <LinearLayout
        android:id="@+id/emotionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/receiveText"
        android:visibility="gone">

        <ImageView
            android:id="@+id/heartFromReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_favorite_24"
            android:layout_below="@id/receiveText"/>

        <TextView
            android:id="@+id/emotionBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/sendBackground"
        android:text="test"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"/>

</RelativeLayout>